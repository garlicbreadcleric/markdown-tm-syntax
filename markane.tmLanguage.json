{
    "name": "Markane Query",
    "scopeName": "source.markane",
    "patterns": [
        { "include": "#string" },
        { "include": "#number" },
        { "include": "#punctuation" },
        { "include": "#symbol" },
        { "include": "#identifier" },
        { "include": "#whitespace" }
    ],
    "repository": {
        "punctuation": {
            "patterns": [
                {
                    "match": "'",
                    "name": "punctuation.quote.markane"
                },
                {
                    "match": "\\(",
                    "name": "punctuation.section.parens.begin.markane"
                },
                {
                    "match": "\\)",
                    "name": "punctuation.section.parens.end.markane"
                }
            ]
        },
        "escaped-char": {
            "name": "constant.character.escape.untitled.markane",
            "match": "\\\\[a-zA-Z]"
        },
        "string": {
            "patterns": [
                {
                    "name": "string.quoted.double.markane",
                    "begin": "\"",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.markane"
                        }
                    },
                    "end": "\"",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.markane"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#escaped-char"
                        }
                    ]
                }
            ]
        },
        "number": {
            "patterns": [
                {
                    "name": "constant.numeric.number.markane",
                    "match": "-?\\d+(\\.\\d+)?"
                }
            ]
        },
        "identifier": {
            "patterns": [
                {
                    "name": "entity.name.identifier.markane",
                    "match": "[a-zA-Z][a-zA-Z0-9\\-_]*\\??"
                }
            ]
        },
        "whitespace": {
            "patterns": [
                {
                    "name": "punctuation.whitespace.markane",
                    "match": "\\s+"
                }
            ]
        }
    }
}